{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "destination": "/details/[id].html",
        "regex": "^/details/([^/]+?)(?:/)?$"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}

